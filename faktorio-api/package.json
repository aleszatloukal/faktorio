{
  "name": "faktorio-api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev --port 9189",
    "start": "wrangler dev",
    "migrate": "tsx migrate.ts",
    "generate": "drizzle-kit generate && pnpm local-migrations-generate",
    "local-migrations-generate": "tsx ./scripts/update-fe-migrations.ts",
    "dup": "drizzle-kit up",
    "kill": "kill -9 $(lsof -t -i:9189)",
    "test": "vitest run",
    "w": "vitest",
    "tsc": "tsc --noEmit",
    "check-env": "tsx scripts/check-env.ts",
    "bump": "npm-check-updates -u"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250513.0",
    "@types/debug": "^4.1.12",
    "drizzle-kit": "^0.31.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3",
    "wrangler": "^4.14.4"
  },
  "dependencies": {
    "@google/genai": "^0.13.0",
    "@google/generative-ai": "^0.24.1",
    "@libsql/client": "^0.15.5",
    "@paralleldrive/cuid2": "^2.2.2",
    "@pinojs/json-colorizer": "^4.0.0",
    "@tanstack/react-query": "^5.76.0",
    "@trpc/client": "^11.1.2",
    "@trpc/react-query": "^11.1.2",
    "@trpc/server": "^11.1.2",
    "@tsndr/cloudflare-worker-jwt": "^3.1.5",
    "currency-codes": "^2.2.0",
    "debug": "^4.4.0",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "drizzle-zod": "^0.7.1",
    "faktorio-shared": "workspace:*",
    "node-mailjet": "^6.0.8",
    "zod": "^3.24.4"
  }
}
