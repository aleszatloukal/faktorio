{
  "name": "faktorio-monorepo",
  "private": true,
  "workspaces": [
    "faktorio-api",
    "faktorio-fe"
  ],
  "devDependencies": {
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "packageManager": "pnpm@10.4.0",
  "scripts": {
    "dev:fe": "cd faktorio-fe && bun dev",
    "dev:api": "cd faktorio-api && bun dev",
    "dev": "npm-run-all --parallel dev:*",
    "kill": "kill -9 $(lsof -t -i:9189)",
    "format": "prettier --write .",
    "db": "cd faktorio-api && pnpm generate && pnpm migrate",
    "dbm": "cd faktorio-api && pnpm migrate",
    "bumpDeps:api": "cd faktorio-api && ncu -u",
    "bumpDeps:fe": "cd faktorio-fe && ncu -u",
    "bumpDeps:root": "ncu -u",
    "bump": "npm-run-all --parallel bumpDeps:* && pnpm i",
    "typecheck": "turbo tsc",
    "test": "vitest"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "npm-run-all": "^4.1.5",
    "superjson": "^2.2.2"
  }
}
